 static void Main(string[] args)
        {
            try
            {
                var file1 = @"D:\sabir\XmlComparator\XmlComparator\TestFiles\App1.config";//@".\TestFiles\a1.config";
                var file2 = @"D:\sabir\XmlComparator\XmlComparator\TestFiles\App2.config";//@".\TestFiles\a2.config";
                
                var handler = new TestXmlCompareHandler();

                using (var comparer = new Comparer(handler))
                {
                    comparer.Compare(file1, file2, handler);
                }
            }
            catch (Exception ex)
            {
                Console.WriteLine("ERROR: " + ex);
            }
            Console.Write("Press RETURN to close...");


            Console.ReadLine();
        }
